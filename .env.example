LLM_PROVIDER=azure_openai
# Switch to OpenAI-compatible (e.g., privateGPT proxy) by uncommenting:
# LLM_PROVIDER=openai
# OPENAI_BASE_URL=http://localhost:8000/v1
# OPENAI_API_KEY=openai-key
# OPENAI_MODEL=gpt-4o-mini

EMBEDDINGS_PROVIDER=azure_openai
EMBEDDINGS_MODEL=text-embedding-3-small
AZURE_OPENAI_ENDPOINT=https://your-azure-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small
AZURE_OPENAI_EMBEDDING_API_KEY=azure-embedding-key
# Switch to BGE-M3 by uncommenting:
# EMBEDDINGS_PROVIDER=bge
# EMBEDDINGS_MODEL=BAAI/bge-m3
# For OpenAI-compatible embeddings (share backend with LLM):
# EMBEDDINGS_PROVIDER=openai
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# OPENAI_EMBEDDING_API_KEY=openai-key
AZURE_OPENAI_LLM_ENDPOINT=https://your-azure-resource.openai.azure.com/
AZURE_OPENAI_LLM_API_VERSION=2024-02-01
AZURE_OPENAI_LLM_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_LLM_API_KEY=azure-llm-key
CHUNK_SIZE=800
CHUNK_OVERLAP=200
RETRIEVER_K=4
RETRIEVER_SCORE_THRESHOLD=1.2  # distance threshold (lower = closer)
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=you@email.com
JIRA_API_TOKEN=your-jira-api-token
# or use bearer auth instead:
# JIRA_BEARER_TOKEN=your-jira-bearer-token
JIRA_API_PATH=/rest/api/2
JIRA_SEARCH_ENDPOINT=/search  # set to /search/jql if your site requires it
JIRA_SEARCH_METHOD=GET        # or POST for /search/jql
JIRA_DEFAULT_JQL=project = DEV ORDER BY updated DESC
JIRA_DATASET_PATH=./data/jira_samples.json
GIT_REPO_ROOT=.
